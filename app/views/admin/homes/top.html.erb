<h3>注文履歴一覧</h3>

<div class="col-md-8 offset-md-1">
  <table class="table table-hover table-inverse">
  <thead>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th colspan="3"></th>
  </thead>

  <% @order.each do |order| %>
     <tr>
      <td><%= link_to order.created_at, admin_order_path(order) %></td>
      <td><%= order.name %></td>
      <td><%= order.order_details.sum(:amount) %></td>
      <% end %>
    </table>
    </div>