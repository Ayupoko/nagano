<h3>ジャンル一覧・追加</h3>

<%= form_with model: @genre, url:admin_genres_path do |f| %>
  ジャンル名
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>


<div class="col-md-8 offset-md-1">
  <table class="table table-hover table-inverse">
  <thead>
      <th>ジャンル</th>
      <th></th>
      <th colspan="3"></th>
  </thead>

      <% @genres.each do |genre| %>
     <tr>
      <td><%= genre.name %></td>
      <td><%= link_to '編集する', edit_admin_genre_path(genre) %></td>
      <% end %>
    </table>
    </div>