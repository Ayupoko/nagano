
<div class="col-md-8 offset-md-1">
  <h2>商品一覧</h2>
  <p><%= link_to "商品新規登録", new_admin_item_path %></p>
</br>

    <table class="table table-hover table-inverse">
  <thead>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th colspan="3"></th>
  </thead>

  <tbody>
    <% @item.each do |item| %>
     <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>

      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td><% if  item.is_active == true %>
          販売中
          <% else %>
          販売停止中<% end %></td>
     </tr>
    <% end %>

  </tbody>
  </table>
    </div>